      <a href="/admin-panel" id="adminLink">Admin Panel</a>
    <% } %>
    <button id="logoutBtn">Logout</button>
  <% } else { %>
    <a href="/login" id="loginBtn">🔐 Login</a>
    <a href="/register" id="regsterBtn">⚙️ Register</a>
  <% } %>
</div>

<!-- More Panel -->
