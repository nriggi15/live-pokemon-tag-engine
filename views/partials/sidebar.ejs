    <!--Tag Usage Stats-->
    <button id="openTagStats">📊 View Tag Usage</button>

    <button onclick="window.location.href='/explore'">🔍 Explore</button>


<% if (page === 'index') { %>
    <!-- View Sets Button -->
    <button id="viewSetsBtn">📦 View All Card Sets</button>
    <div id="setsPopup" class="popup hidden">
