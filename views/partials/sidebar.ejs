        <span class="close-button" id="closeSetsPopup">&times;</span>
        <h2>All Pokémon Card Sets</h2>
        <ul id="setsList"></ul>
      </div>
    </div>

    <button id="surpriseBtn" class="sidebar-button">🎲 Surprise Me</button>
<% } %>

