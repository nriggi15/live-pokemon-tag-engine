<div id="sidebar">

  <div id="sidebarContent">

    <a href="/" id="homeBtn" class="sidebar-button">Home</a>
    <!-- Dropdown Section -->
    <div class="dropdown-section">
      <button id="toggleDropdownBtn">🔽 Account Tools</button>
      <div id="dropdownContent">
        <a href="/register" class="dropdown-link hidden" id="registerBtn">Register</a>
        <a href="/login" class="dropdown-link hidden" id="loginBtn">Login</a>
        <a href="/dashboard" class="dropdown-link hidden" id="dashboardBtn">Dashboard</a>
        <a href="#" class="dropdown-link hidden" id="myProfileBtn">My Profile</a>
        <a href="/moderator-hub" class="dropdown-link hidden" id="modLink">Moderator Hub</a>
