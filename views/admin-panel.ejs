    } catch (err) {
      adminWorkspace.innerHTML = `<p>âŒ Failed to load tagging queue.</p>`;
      console.error(err);
    }
  });

  async function handleTagAction(id, action) {
    try {
      const res = await fetch(`/api/mod/newtags/${id}/${action}`, {
        method: 'POST',
        credentials: 'include'
      });

      if (res.ok) {
        // Refresh queue
